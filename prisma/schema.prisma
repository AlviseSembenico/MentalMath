generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  history  History[]
}

model History {
  id           Int              @id @default(autoincrement())
  userId       Int
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  duration     Int
  timeTaken    Int              @default(0)
  difficulty   String           @default("balanced")
  maxDecimalPlaces Int          @default(0)
  operations   String[]         @default([])
  correct      Int
  attempted    Int
  score        Int
  accuracy     Int
  pace         Float
  problemAttempts ProblemAttempt[]
  createdAt    DateTime         @default(now())
}

model ProblemAttempt {
  id        Int      @id @default(autoincrement())
  historyId Int
  history   History  @relation(fields: [historyId], references: [id], onDelete: Cascade)
  prompt    String
  answer    Float
  userAnswer Float
  operation String
  isCorrect Boolean
  timeTaken Int      @default(0)
  createdAt DateTime @default(now())
}
